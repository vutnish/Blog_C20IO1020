  left: 13px;
  top: 158px;
  border-color: rgb(84, 202, 218);
  background: #ffffff;
  border-radius: 10px;
}
input:focus::placeholder {
  color: transparent;
}
.pass {
  background: -webkit-linear-gradient(#88afd6, rgba(33, 194, 204, 0));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  border-color: rgb(84, 202, 218);
  position: absolute;
