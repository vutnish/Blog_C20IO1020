<!DOCTYPE html>
<html>
<head>
	<title>Dashboard</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="../css/admin.css">
</head>
<body>
	<input type="checkbox" id="checkbox">
	<header class="header">
		<h2 class="u-name">Admin <b>Panel</b>
			<label for="checkbox">
				<i id="navbtn" class="fa fa-bars" aria-hidden="true"></i>
			</label>
		</h2>
		<i class="fa fa-user" aria-hidden="true"></i>
	</header>
	<div class="body">
		<nav class="side-bar">
			<div class="user-p">
				<img src="../materials/download.jpg" alt="userphoto">
				<h4></h4>
			</div>
			<ul>
				<li>
					<a href=/adminDash">
						<i class="fa fa-desktop" aria-hidden="true"></i>
						<span>Admin</span>
					</a>
				</li>
				<li>
					<a href="#">
						<i class="fa fa-envelope-o" aria-hidden="true"></i>
						<span>Message</span>
					</a>
				</li>
				<li>
					<a href="/users">
						<i class="fa fa-info-circle" aria-hidden="true"></i>
						<span>Users</span>
					</a>
				</li>
				<li>
					<a href="/adminDashHighlight">
						<i class="fa fa-cog" aria-hidden="true"></i>
						<span>Highlight posts</span>
					</a>
				</li>
				<li>
					<a href="/">
						<i class="fa fa-power-off" aria-hidden="true"></i>
						<span>Logout</span>
					</a>
				</li>
			</ul>
		</nav>
		<section class="section-1">
             <% for(var i=0;i<user.length;i++) { %> 
			<form class="edit" action="/adminDashUsersEdit/<%= user[i].id %>" method="POST">
                <div >
                    <h2>Edit</h2>
                </div>
                <input class="user1" name="username" type="text" placeholder="Enter Username" value="<%=user[i].username%>" required>
                <input class="pass1" name="password" type="text" value="<%= user[i].password %>" placeholder="Enter Password"  required>
                <input class="email1" name="email" type="text" placeholder="Enter Email" value="<%= user[i].email %>" required>
                <input class="submit" type="submit">
                </form>
                 <% } %> 
		</section>
	</div>

</body>
</html>