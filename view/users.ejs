<!DOCTYPE html>
<html>
<head>
	<title>Dashboard</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="css/admin.css">
</head>
<body>
	<input type="checkbox" id="checkbox">
	<header class="header">
		<h2 class="u-name">Admin <b>Panel</b>
			<label for="checkbox">
				<i id="navbtn" class="fa fa-bars" aria-hidden="true"></i>
			</label>
		</h2>
		<i class="fa fa-user" aria-hidden="true"></i>
	</header>
	<div class="body">
		<nav class="side-bar">
			<div class="user-p">
				<img src="./materials/download.jpg" alt="userphoto">
				<h4><%= username %></h4>
			</div>
			<ul>
				<li>
					<a href="/adminDash">
						<i class="fa fa-desktop" aria-hidden="true"></i>
						<span>Admin</span>
					</a>
				</li>
				<li>
					<a href="#">
						<i class="fa fa-envelope-o" aria-hidden="true"></i>
						<span>Message</span>
					</a>
				</li>
				<li>
					<a href="/users">
						<i class="fa fa-info-circle" aria-hidden="true"></i>
						<span>Users</span>
					</a>
				</li>
				<li>
					<a href="/adminDashHighlight">
						<i class="fa fa-cog" aria-hidden="true"></i>
						<span>Highlight posts</span>
					</a>
				</li>
				<li>
					<a href="/">
						<i class="fa fa-power-off" aria-hidden="true"4ebh></i>
						<span>Logout</span>
					</a>
				</li>
			</ul>
		</nav>
		<section class="section-1">
			<div class="buttonAddUser">
				<a style="color: black;" href="/adminAddUser">add user
			</a>
		</div>
			<table>
				
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Email</th>
                    <th>action</th>
                </tr>
				<% for(var i=0;i< user.length;i++){ %>
				<tr>
                    <td><%= user[i].id %></td>
                    <td><%= user[i].username %></td>
                    <td><%= user[i].password %></td>
                    <td><%= user[i].email %></td>
                <td><a style="color: black;" class="editUser" href="/adminDashUsersEdit/<%= user[i].id %>">edit</a>
					<form class="editUser" action="/delete/<%= user[i].id %>" method="post"><input type="submit" value="delete"></form>
				</td>
                </tr>
				<% } %>
            </table>
		</section>
	</div>

</body>
</html>